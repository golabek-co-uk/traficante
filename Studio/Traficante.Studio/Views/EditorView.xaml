<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:AvalonEdit="clr-namespace:AvaloniaEdit;assembly=AvaloniaEdit"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Traficante.Studio.Views.EditorView">
  <Grid RowDefinitions="*,Auto" ColumnDefinitions="*">
    <AvalonEdit:TextEditor Grid.Row="0"
      Name="TextEditor"
      ShowLineNumbers="True"
      HorizontalScrollBarVisibility="Auto"
      VerticalScrollBarVisibility="Auto" />
    <Grid Grid.Row="1" ColumnDefinitions="*,Auto,Auto,Auto,Auto"  Background="{DynamicResource ThemeControlMidBrush}">
        <TextBlock Grid.Column="0"></TextBlock>
        <TextBlock Grid.Column="1" Margin="0 0 3 0">Ln:</TextBlock>
        <TextBlock Grid.Column="2" Width="30" Name="Ln"></TextBlock>
        <TextBlock Grid.Column="3" Margin="0 0 3 0">Col:</TextBlock>
        <TextBlock Grid.Column="4" Width="30" Name="Col"></TextBlock>
    </Grid>
  </Grid>
</UserControl>
